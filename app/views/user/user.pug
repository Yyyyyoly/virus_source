extends ../layout/base

block title
  title #{title}
block content
  .container.user
    .user-page
      .row.head-picture
        img.img-fluid.bgc(src='/img/user_bgc.png')
        .col.user-info.text-center
          .pic
            img.img-fluid(src= user.headImgUrl)
          p.nickname= user.userName
      .row.credits-list
        .col
          ul.list-group
            a(href= '/user/bonusPoint'): li.list-group-item
              i.fa.fa-gg-circle
              |我的积分
            a(href= '/user/commission'): li.list-group-item
              i.fa.fa-dollar
              |我的佣金
            a(href= '/user/advice'): li.list-group-item
              i.fa.fa-comment
              |建议和反馈
            a(href= '/user/qrCode'): li.list-group-item
              i.fa.fa-share-alt-square
              |分享给好友


  include ../layout/navbar-bottom